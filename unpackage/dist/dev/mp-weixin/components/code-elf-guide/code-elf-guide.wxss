
page,
.content{
	width: 100%;
	height: 100%;
	background-size: 100% auto ;
	padding: 0;
}
.swiper{
	width: 100%;
	height: 100vh;
	background: #FFFFFF;
}
.swiper-item {
	width: 100%;
	height: 100%;
	text-align: center;
	position: relative;
}
.swiper-item-img{
	width: 100vw;
	height: 100vh;
}
.swiper-item-img image{
	width: 100%;
	height: 100%;
}
.jump-over,.experience{
	position: absolute;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 40rpx;
	-webkit-border-radius: 30rpx;
	        border-radius: 30rpx;
	font-size: 32rpx;
	color: #fff;
	border: 1px solid #FFF;
	z-index: 999;
}
.jump-over{
	right: 45rpx;
	top: 125rpx;
}
.experience{
	width: 40%;
	text-align: center;
	left: 28%;
	padding: 2px;
	margin-right: -105rpx;
	background: rgb(71,183,168);
	bottom: 12%;
}

